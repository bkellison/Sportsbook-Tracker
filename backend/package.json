{
  "name": "sportsbook-tracker-api",
  "version": "1.0.0",
  "description": "Backend API for Sportsbook Tracker - A comprehensive application for managing multiple sportsbook accounts, tracking transactions, and analyzing betting performance",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore client/ --ignore public/",
    "dev:debug": "nodemon --inspect server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "db:backup": "node scripts/backup.js",
    "docker:build": "docker build -t sportsbook-tracker-api .",
    "docker:run": "docker run -p 3001:3001 --env-file .env sportsbook-tracker-api",
    "build": "echo 'No build step required for Node.js backend'",
    "heroku-postbuild": "echo 'Backend deployed successfully'",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "performance:test": "clinic doctor -- node server.js",
    "docs:generate": "jsdoc -c jsdoc.conf.json",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "prepare": "husky install"
  },
  "keywords": [
    "sportsbook",
    "betting",
    "tracker",
    "api",
    "express",
    "mysql",
    "jwt",
    "nodejs",
    "fintech",
    "gambling",
    "analytics"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sportsbook-tracker-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sportsbook-tracker-api/issues"
  },
  "homepage": "https://github.com/yourusername/sportsbook-tracker-api#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "validator": "^13.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "csv-stringify": "^6.4.4",
    "winston": "^3.11.0",
    "express-winston": "^4.2.0",
    "joi": "^17.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "express-slow-down": "^2.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "cross-env": "^7.0.3",
    "clinic": "^13.0.0",
    "jsdoc": "^4.0.2",
    "@types/jest": "^29.5.8",
    "faker": "^6.6.6"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/scripts/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
  "installType": "skip",
  "hooks": {
    "pre-commit": "lint-staged",
    "pre-push": "npm test"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "tests/",
      "coverage/",
      "logs/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "consistent-return": "off",
      "func-names": "off",
      "object-shorthand": "off",
      "no-process-exit": "off",
      "no-param-reassign": "off",
      "no-return-await": "off",
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "prefer-destructuring": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "config": {
    "port": 3001,
    "database": {
      "host": "localhost",
      "port": 3306,
      "name": "sportsbook_tracker"
    }
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/yourusername"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  }
}